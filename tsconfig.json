{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ES2020", "dom"],
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": false,
    "outDir": "build",
    "rootDir": "src",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "build"]
}
